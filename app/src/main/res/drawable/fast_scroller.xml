<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/accent"
                android:width="@dimen/stroke_medium"/>
            <size
                android:width="36dp"
                android:height="36dp"/>
            <solid
                android:color="@color/first"/>
            <corners
                android:bottomRightRadius="@dimen/corner_radius"
                android:bottomLeftRadius="@dimen/corner_radius"
                android:topLeftRadius="@dimen/corner_radius"
                android:topRightRadius="@dimen/corner_radius"/>

            <padding
                android:right="5dp"
                android:left="5dp"/>
        </shape>
    </item>
    <item android:drawable="@drawable/ic_fast_scroller"/>
</layer-list>