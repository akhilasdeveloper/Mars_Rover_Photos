<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photo_item_height"
    android:layout_margin="@dimen/stroke_light"
    android:gravity="center"
    android:background="@drawable/imageview_placeholder">

    <ImageView
        android:id="@+id/image_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_item_height"
        android:contentDescription="@string/rover_captured_image" />
    <TextView
        android:id="@+id/camera_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:drawablePadding="@dimen/drawable_button_background_ring_icon_padding"
        style="@style/photo_item_description"
        app:drawableStartCompat="@drawable/ic_round_camera_alt_24"
        android:visibility="invisible"/>

</FrameLayout>