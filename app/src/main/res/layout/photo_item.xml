<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="1dp"
    android:gravity="center"
    android:background="@drawable/imageview_placeholder">

    <ImageView
        android:id="@+id/image_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/rover_captured_image" />
    <TextView
        android:id="@+id/camera_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/system_border"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:textColor="@color/system_for"
        android:textSize="12sp"
        android:padding="5dp"
        app:drawableStartCompat="@drawable/ic_round_camera_alt_24" />

</FrameLayout>