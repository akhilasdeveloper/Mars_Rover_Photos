<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photo_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/photo_date_item_height"
        android:layout_marginStart="@dimen/stroke_strong"
        android:layout_marginEnd="@dimen/stroke_strong"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

    <include layout="@layout/top_appbar"
        android:id="@+id/top_appbar"/>

    <include layout="@layout/bottom_appbar"
        android:id="@+id/bottom_appbar"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/home_bottom_toolbar_second"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="@dimen/global_window_padding"
        app:layout_collapseMode="pin"
        app:titleTextAppearance="@style/TextAppearance.ToolBarTitle.Collapsed"
        android:visibility="gone"
        android:background="@color/appbar"
        app:navigationIcon="@drawable/ic_x"
        app:navigationIconTint="@color/system_for"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_date_display_text"
        android:gravity="center"
        style="@style/TextAppearance.ToolBarTitle.Expanded"
        android:background="@color/system_border"
        android:alpha="0"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tap_to_refresh"
        android:textColor="@color/system_for"
        android:visibility="gone"
        app:cardBackgroundColor="@color/accent"
        app:cardCornerRadius="20dp" />


    <ProgressBar
        android:id="@+id/progressTop"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_anchor="@id/photo_recycler"
        android:background="@color/appbar"
        app:layout_anchorGravity="top|center_horizontal"
        android:layout_gravity="center|bottom"
        android:indeterminateTint="@color/accent"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/accent"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@color/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/photo_recycler"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_gravity="center|bottom"
        android:indeterminate="true"
        android:indeterminateTint="@color/accent"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>