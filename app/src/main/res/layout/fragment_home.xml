<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photo_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/home_appbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appbar"
        app:elevation="0dp"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_collapsing_toolbar_top"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:statusBarScrim="@color/appbar"
            android:background="@color/appbar"
            app:contentScrim="@color/appbar"
            app:titleEnabled="true"
            app:titleCollapseMode="scale"
            app:collapsedTitleTextAppearance="@style/TextAppearance.ToolBarTitle.Collapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.ToolBarTitle.Expanded">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_top_image_height"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="none"
                android:elevation="0dp"
                android:id="@+id/home_toolbar_top"
                app:contentInsetStart="@dimen/global_window_padding"
                app:titleTextAppearance="@style/TextAppearance.ToolBarTitle.Collapsed"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/home_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/appbar"
        app:contentInsetStart="0dp"
        app:hideOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbar"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/toolbar_bottom_vertical_padding"
                android:paddingBottom="@dimen/toolbar_bottom_vertical_padding">

                <TextView
                    android:id="@+id/sol_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/toolbar_bottom_horizontal_padding"
                    android:layout_marginEnd="@dimen/toolbar_bottom_horizontal_padding"
                    android:layout_weight="1"
                    app:drawableStartCompat="@drawable/ic_mars_icon"
                    app:drawableTint="@color/system_for"
                    style="@style/bottom_appbar_button_ring"/>

                <TextView
                    android:id="@+id/date_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/toolbar_bottom_horizontal_padding"
                    android:layout_weight="1"
                    app:drawableStartCompat="@drawable/ic_round_date_range_24"
                    app:drawableTint="@color/system_for"
                    style="@style/bottom_appbar_button_ring"/>

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.bottomappbar.BottomAppBar>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tap_to_refresh"
        android:textColor="@color/system_for"
        android:visibility="gone"
        app:cardBackgroundColor="@color/accent"
        app:cardCornerRadius="20dp" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/accent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>