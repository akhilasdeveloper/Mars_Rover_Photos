<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/first">

    <ImageView
        android:id="@+id/image_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/rover_captured_image"
        android:background="@drawable/imageview_placeholder"
        android:layout_margin="@dimen/stroke_strong"
        android:transitionName="testTransition"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent50"
        android:layout_margin="@dimen/stroke_strong" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/global_window_padding"
        android:layout_marginEnd="@dimen/global_window_padding"
        android:layout_marginTop="@dimen/global_window_padding">

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/photo_item_date"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/photo_item_sol"
            app:drawableStartCompat="@drawable/ic_mars_icon"
            app:drawableTint="@color/white"
            android:drawablePadding="@dimen/drawable_button_background_ring_icon_padding"/>


    </LinearLayout>


    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/photo_item_sol"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/global_window_padding"
        android:layout_marginEnd="@dimen/global_window_padding"
        android:layout_marginBottom="@dimen/global_window_padding"
        android:padding="@dimen/drawable_button_background_ring_icon_padding"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/system_border"
        android:visibility="gone"
        android:id="@+id/overlay"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:visibility="gone"
        android:buttonTint="@color/accent"
        android:id="@+id/selection"/>

</FrameLayout>