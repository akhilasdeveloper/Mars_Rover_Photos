<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/appbar">

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sol_slider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginLeft="@dimen/global_window_padding"
        android:layout_marginRight="@dimen/global_window_padding"
        android:layout_marginBottom="@dimen/global_window_padding"
        >
        <TextView
            android:id="@+id/cancel_sol_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bottom_appbar_button_ring"
            app:drawableTint="@color/system_for"
            android:text="@string/cancel"
            android:layout_marginEnd="@dimen/global_window_padding"/>
        <TextView
            android:id="@+id/ok_sol_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bottom_appbar_button_ring"
            app:drawableTint="@color/system_for"
            android:text="@string/ok"/>
    </LinearLayout>

</LinearLayout>