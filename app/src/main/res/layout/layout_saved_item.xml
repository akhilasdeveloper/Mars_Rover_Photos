<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/first"
    android:layout_margin="@dimen/stroke_strong">

    <ImageView
        android:id="@+id/image_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/rover_captured_image"
        android:background="@drawable/imageview_placeholder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_from_bl"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="@dimen/global_window_padding"
        android:layout_marginEnd="@dimen/global_window_padding"
        android:layout_marginBottom="@dimen/global_window_padding">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/global_window_padding_half"
            app:drawableStartCompat="@drawable/ic_mars_icon"
            app:drawableTint="@color/white"
            android:drawablePadding="@dimen/drawable_button_background_ring_icon_padding"/>


    </LinearLayout>

</FrameLayout>