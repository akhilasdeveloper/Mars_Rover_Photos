<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/stroke_strong"
    android:background="@color/appbar"
    android:gravity="bottom"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:cardBackgroundColor="@color/accent"
        app:cardCornerRadius="@dimen/corner_radius">

        <ImageView
            android:id="@+id/image_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".2"
            android:background="@drawable/imageview_placeholder"
            android:contentDescription="@string/rover_captured_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="@dimen/global_window_padding"
            android:layout_marginEnd="@dimen/global_window_padding"
            android:layout_marginBottom="@dimen/global_window_padding"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/sol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_window_padding_half"
                android:drawablePadding="@dimen/drawable_button_background_ring_icon_padding"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_mars_icon"
                app:drawableTint="@color/white" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <CheckBox
        android:id="@+id/selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:checked="true"
        android:layout_gravity="end"
        android:translationZ="1dp" />

</FrameLayout>