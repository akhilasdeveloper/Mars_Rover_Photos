<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/popup_window_width"
    app:cardBackgroundColor="@color/appbar"
    app:cardCornerRadius="@dimen/corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/tool_bar_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_top_title_text_height"
            android:layout_marginStart="@dimen/global_window_padding"
            android:layout_marginEnd="@dimen/global_window_padding"
            android:layout_marginTop="@dimen/global_window_padding"
            android:drawablePadding="@dimen/global_window_padding"
            android:labelFor="@id/solSelectorCount"
            android:text="@string/share_as"
            android:textColor="@color/system_for"
            app:drawableStartCompat="@drawable/ic_twotone_share_24"
            app:drawableTint="@color/system_for" />

        <include layout="@layout/layout_more_select_content"
            android:id="@+id/layout_more_select_content"/>

        <TextView
            android:id="@+id/cancel_sol_selector"
            style="@style/bottom_appbar_button_ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/global_window_padding"
            android:layout_marginEnd="@dimen/global_window_padding"
            android:layout_marginBottom="@dimen/global_window_padding"
            android:text="@string/cancel" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>