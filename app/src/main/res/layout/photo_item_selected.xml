<?xml version="1.0" encoding="utf-8"?>
<com.akhilasdeveloper.marsroverphotos.ui.views.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/stroke_strong"
    android:background="@color/first">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/corner_radius"
        android:clipToPadding="true"
        app:cardBackgroundColor="@color/accent">
        <com.akhilasdeveloper.marsroverphotos.ui.views.SquareImageView
            android:id="@+id/image_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".2"
            android:background="@drawable/imageview_placeholder"
            android:contentDescription="@string/rover_captured_image" />
    </com.google.android.material.card.MaterialCardView>

    <CheckBox
        android:id="@+id/selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:checked="true"
        android:translationZ="1dp"
        android:clickable="false" />

</com.akhilasdeveloper.marsroverphotos.ui.views.SquareFrameLayout>
