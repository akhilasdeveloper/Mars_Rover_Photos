<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/stroke_strong"
    android:background="@color/first">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius"
        android:clipToPadding="true">
        <com.akhilasdeveloper.marsroverphotos.ui.views.SquareImageView
            android:id="@+id/image_description"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:background="@drawable/imageview_placeholder"
            android:contentDescription="@string/rover_captured_image" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:translationZ="1dp"
        android:background="@drawable/button_background"
        android:foreground="@drawable/ripple_effect"
        app:drawableStartCompat="@drawable/ic_x"
        android:padding="2dp"
        android:layout_margin="@dimen/global_window_padding_half"
        app:drawableTint="@color/accent" />

</FrameLayout>
