<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarsRoverPhotos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- System bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <!-- Window theme -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="bottom_appbar_button_ring" parent="Theme.MarsRoverPhotos">
        <item name="android:background">@drawable/button_background_ring</item>
        <item name="android:textColor">@color/system_for</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_background" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="TextAppearance.ToolBarTitle.Collapsed" parent="Theme.MarsRoverPhotos">
        <item name="android:textColor">@color/system_for</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ToolBarTitle.Expanded" parent="TextAppearance.ToolBarTitle.Collapsed">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tool_bar_title" parent="Theme.MarsRoverPhotos">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/system_for</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="photo_item_description" parent="Theme.MarsRoverPhotos">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/system_for</item>
    </style>

    <style name="photo_item_date" parent="Theme.MarsRoverPhotos">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/drawable_button_background_ring_icon_padding</item>
    </style>

    <style name="photo_item_sol" parent="photo_item_date">
        <item name="android:textSize">@dimen/extra_small_text_size</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/light_for</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="colorSurface">@color/appbar</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>
</resources>